<h1>ログイン</h1>
<%= form_tag session_path do %>
  <div class="form">
    <div>
      <label>ユーザ名</label>
      <input type="text" name="name">
    </div>
    <div>
      <label>パスワード</label>
      <input type="password" name="password">
    </div>
    <div>
      <input type="submit" value="ログイン">
    </div>
  </div>
<% end %>
