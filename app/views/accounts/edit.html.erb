<%= form_for @user, url: account_path do |f| %>
  <div class="form">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>

    <%= f.label :full_name, "フルネーム" %>
    <%= f.text_field :full_name %>

    <%= f.label :bio, "自己紹介文" %>
    <%= f.text_area :bio %>

    <%= f.submit "プロフィールを更新する" %>
  </div>
<% end %>
